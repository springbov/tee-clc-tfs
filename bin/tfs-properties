#!/usr/bin/env node

var hasError = false,
    program  = require('commander'),
    tfsProperties = require('../lib/tfs/properties');

program
  .description('Displays information about items under version control.Required PermissionsTo use the properties command, you must have the Read permission set to Allow for all specified files and folders. For more information, see Team Foundation Server Permissions.')
  .usage('[itemspec] [options]')
  .option('-V, --verbose', 'Verbose mode.')
  .parse(process.argv);

var options = {
  verbose: program.verbose
};

tfsProperties(program.args, options);
